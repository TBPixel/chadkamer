<!DOCTYPE html>
<html class="no-js" {{ site.language_attributes }}>
<head>
  <meta charset="{{ site.charset }}">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">

  {{ wp_head }}
</head>
<body>
  <div class="page">

    {# Site Header #}
    {% block header %}
    <header class="page__header">
      {# Site Navigation #}
      {% block nav %}
      {% include 'views/partials/nav.twig' %}
      {% endblock %}
    </header>
    {% endblock %}

    {# Site Title #}
    {% block title %}
    <h1 class="page__title">
      {{ site.title }}
    </h1>
    {% endblock %}

    {# Site main content #}
    <main class="page__main">
      {% block content %}{% endblock %}
    </main>

    {% block footer %}
    <footer class="page__footer">
      {# Social Nav loop #}
      {% block social %}
      <nav class="social">
      {% for item in menu_social.get_items %}
        <a href="{{ item.link }}" class="social__item">{{ item.title }}</a>
      {% endfor %}
      </nav>
      {% endblock %}
    </footer>
    {% endblock %}
  </div>

  {{ wp_footer }}
  {% block scripts %}
  <script>
  WebFont.load({
    google: {
      families: [ 'Work Sans:300,400,700' ]
    }
  });
  </script>
  {% endblock %}
</body>
</html>